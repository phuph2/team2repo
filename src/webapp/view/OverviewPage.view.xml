<mvc:View xmlns="sap.m" xmlns:mvc="sap.ui.core.mvc" xmlns:f="sap.f" xmlns:card="sap.f.cards" xmlns:core="sap.ui.core" displayBlock="true"
	height="100%" xmlns:l="sap.ui.layout" xmlns:form="sap.ui.layout.form" controllerName="Team2.controller.OverviewPage">
	<App>
		<Page title="{i18n>OverviewPageTitle}">
			<f:Card class="sapUiMediumMargin" width="400px">
				<f:header>
					<card:Header title="All Materials" subtitle="Availabel Materials"/>
				</f:header>
				<f:content>
					<List growing="true" growingThreshold="4" showSeparators="None" items="{path: 'materials>/MaterialCollection'}">
						<CustomListItem>
							<HBox alignItems="Center" justifyContent="SpaceBetween">
								<VBox class="sapUiSmallMarginBegin sapUiSmallMarginTopBottom">
									<Title level="H3" text="{materials>Name}"/>
									<Text text="{materials>Type}"/>
								</VBox>
								<ObjectStatus class="sapUiTinyMargin" text="{materials>Price}"/>
							</HBox>
						</CustomListItem>
					</List>
				</f:content>
			</f:Card>
			<f:Card class="sapUiMediumMargin" width="400px">
				<f:header>
					<card:Header title="All Stocks" subtitle="Status of Material in Stocks"/>
				</f:header>
				<f:content>
					<List growing="true" growingThreshold="4" showSeparators="None" items="{path: 'stocks>/StockCollection'}">
						<CustomListItem>
							<HBox alignItems="Center" justifyContent="SpaceBetween">
								<VBox class="sapUiSmallMarginBegin sapUiSmallMarginTopBottom">
									<Title level="H3" text="{stocks>Name}"/>
									<Text text="{stocks>StorageLocation}"/>
								</VBox>
								<ObjectStatus class="sapUiTinyMargin" text="Waiting update"/>
							</HBox>
						</CustomListItem>
					</List>
				</f:content>
			</f:Card>
		</Page>
	</App>
</mvc:View>