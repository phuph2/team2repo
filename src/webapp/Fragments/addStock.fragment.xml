<core:FragmentDefinition xmlns="sap.m" xmlns:core="sap.ui.core">
	<Dialog title="add" >
		<content>
			<VBox >
				<Label text="Stock" labelFor="comboBoxStock"/>
				<ComboBox class="sapUiSmallMargin" required="true" items="{ path: 'warehouse>/Stocks', sorter: { path: 'Name' } }" change="handleChange1">
					<core:Item key="{warehouse>StockCode}" text="{warehouse>Name}"/>
				</ComboBox>
				<Label text="Material" labelFor="comboBoxMaterial"/>
				<ComboBox class="sapUiSmallMargin" required="true" items="{ path: 'warehouse>/Materials', sorter: { path: 'Name' } }" change="handleChange2">
					<core:Item key="{warehouse>MaterialCode}" text="{warehouse>Name}"/>
				</ComboBox>
				<Label text="Amount" labelFor="amountInput"/>
				<Input type="Number" required="true" value="" liveChange="handleUserInput"/>
				<Label required="true" text="Stored date" labelFor="storedDateStock"/>
				<DatePicker change="handleChange3"/>
			</VBox>
		</content>
		<beginButton>
			<Button text="Submit" press="onSubmit"/>
		</beginButton>
		<endButton>
			<Button text="Cancel" press="onClose"/>
		</endButton>
	</Dialog>
</core:FragmentDefinition>