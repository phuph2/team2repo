<core:FragmentDefinition xmlns="sap.m" xmlns:core="sap.ui.core">
	<Dialog title="addMaterial" >
		<content>
			<VBox >
				<Label text="Code" labelFor="fieldCode"/>
				<Input id="fieldCode" required="true" width="50%" change="onChangInput"/>
				<Label text="Name" labelFor="fieldName"/>
				<Input id="fieldName" required="true" width="50%" change="onChangInput"/>
				<Label text="Type" labelFor="fieldType"/>
				<ComboBox id="cboType" required="true" width="50%"  items="{path: 'warehouse>/Materials', sorter: {path: 'Type'}}" change="onChangComboBox">
					<core:Item key="{warehouse>Type}" text="{warehouse>Type}"/>
				</ComboBox>
				<Label text="Price" labelFor="fieldPrice"/>
				<Input id="fieldPrice" required="true" width="50%" liveChange="onChangInputNumber"/>
				<Label text="BaseUnit" labelFor="fieldBaseUnit"/>
				<ComboBox id="base" required="false" width="50%" items="{ path: 'warehouse>/Materials', sorter: {path: 'BaseUnit'}}">
					<core:Item key="{warehouse>BaseUnit}" text="{warehouse>BaseUnit}"/>
				</ComboBox>
				<Label text="Description" labelFor="fieldDescription"/>
				<TextArea id="fieldDescription" required="false" width="50%"/>
			</VBox>
		</content>
		<beginButton>
			<Button text="Submit" press="onSubmit"/>
		</beginButton>
		<endButton>
			<Button text="Cancel" press="onClose"/>
		</endButton>
	</Dialog>
</core:FragmentDefinition>